---
import IconLogo from "../assets/IconLogo.svg";
import Facebook from "../assets/IconFacebook.svg";
import IconInstagram from "../assets/IconInstagram.svg";
import IconTwitter from "../assets/IconTwitter.svg";
import Linkedin from "../assets/IconLinkedin.svg";
---

<footer class="bg-white p-6 border-t border-gray-300 text-gray-600">
  <div class="flex items-center space-x-4 mb-6">
    <IconLogo width={64} height={64} class="text-gray-800" />
  </div>
  <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4">
    <div>
      <h4 class="font-bold text-gray-800 mb-2">Sell a Home</h4>
      <ul class="space-y-1">
        <li><a href="#" class="hover:text-gray-900">Request an offer</a></li>
        <li><a href="#" class="hover:text-gray-900">Pricing</a></li>
        <li><a href="#" class="hover:text-gray-900">Reviews</a></li>
        <li><a href="#" class="hover:text-gray-900">Stories</a></li>
      </ul>
    </div>
    <div>
      <h4 class="font-bold text-gray-800 mb-2">Buy a Home</h4>
      <ul class="space-y-1">
        <li><a href="#" class="hover:text-gray-900">Buy</a></li>
        <li><a href="#" class="hover:text-gray-900">Finance</a></li>
      </ul>
    </div>
    <div>
      <h4 class="font-bold text-gray-800 mb-2">Buy, Rent and Sell</h4>
      <ul class="space-y-1">
        <li>
          <a href="#" class="hover:text-gray-900">Buy and sell properties</a>
        </li>
        <li><a href="#" class="hover:text-gray-900">Rent home</a></li>
        <li><a href="#" class="hover:text-gray-900">Builder trade-up</a></li>
      </ul>
    </div>
    <div>
      <h4 class="font-bold text-gray-800 mb-2">Terms & Privacy</h4>
      <ul class="space-y-1">
        <li><a href="#" class="hover:text-gray-900">Trust & Safety</a></li>
        <li><a href="#" class="hover:text-gray-900">Terms of Service</a></li>
        <li><a href="#" class="hover:text-gray-900">Privacy Policy</a></li>
      </ul>
    </div>
    <div>
      <h4 class="font-bold text-gray-800 mb-2">About</h4>
      <ul class="space-y-1">
        <li><a href="#" class="hover:text-gray-900">Company</a></li>
        <li><a href="#" class="hover:text-gray-900">How it works</a></li>
        <li><a href="#" class="hover:text-gray-900">Contact</a></li>
        <li><a href="#" class="hover:text-gray-900">Investors</a></li>
      </ul>
    </div>
    <div>
      <h4 class="font-bold text-gray-800 mb-2">Resources</h4>
      <ul class="space-y-1">
        <li><a href="#" class="hover:text-gray-900">Blog</a></li>
        <li><a href="#" class="hover:text-gray-900">Guides</a></li>
        <li><a href="#" class="hover:text-gray-900">FAQ</a></li>
        <li><a href="#" class="hover:text-gray-900">Help Center</a></li>
      </ul>
    </div>
  </div>
  <div class="flex justify-center space-x-6 mt-6">
    <a href="#" aria-label="Facebook"
      ><Facebook class="h-6 w-6 text-gray-600 hover:text-gray-900" /></a
    >
    <a href="#" aria-label="Instagram"
      ><IconInstagram class="h-6 w-6 text-gray-600 hover:text-gray-900" /></a
    >
    <a href="#" aria-label="Twitter"
      ><IconTwitter class="h-6 w-6 text-gray-600 hover:text-gray-900" /></a
    >
    <a href="#" aria-label="Linkedin"
      ><Linkedin class="h-6 w-6 text-gray-600 hover:text-gray-900" /></a
    >
  </div>
